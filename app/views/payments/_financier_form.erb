<div class="container">
  <h3>Financiera</h3>
  <div class="row form-inputs">

    <div class="col-sm">
      <%= f.input :amount %>
    </div>

    <div class="col-sm">
      <%= f.association :financier %>
    </div>

    <div class="col-sm align-self-end form-group">
    </div>
  </div>

  <div class="row form-inputs">

    <div class="col-sm">
      <%= f.input :discount %>
    </div>

    <div class="col-sm">
      <%= f.input :down_payment %>
    </div>

    <div class="col-sm align-self-end form-group">
    </div>
  </div>
</div>



