<div class="container">
  <h3>Vehiculo en parte de Pago</h3>
  <div class="row form-inputs">
    <div class="col-sm">
    </div>

    <div class="col-sm">
    </div>

    <div class="col-sm align-self-end form-group text-right">
      <%= f.hidden_field :_destroy %>
      <%= link_to "X", '#', class: "remove_fields btn btn-danger" %>
    </div>
  </div>

  <div class="container">
    <h4>Detalles Vehiculo</h4>
      <div class="row form-inputs">
        <div class="col-sm">
          <%= f.input :brand_id, as: :select, collection: Brand.all %>
        </div>
        <div class="col-sm">
          <%= f.input :model %>
        </div>
        <div class="col-sm">
          <%= f.input :year, as: :integer, input_html: { min: 1900, max: 2100 } %>
        </div>
      </div>

      <div class="row form-inputs">
        <div class="col-sm">
          <%= f.input :license_plate %>
        </div>
        <div class="col-sm">
          <%= f.input :color %>
        </div>
        <div class="col-sm">
          <%= f.input :milage, as: :integer, input_html: { min: 0 } %>
        </div>
      </div>

      <div class="row form-inputs">
        <div class="col-sm">
          <%= f.input :fuel_id, as: :select, collection: Fuel.all %>
        </div>
        <div class="col-sm">
          <%= f.input :transmission_id, as: :select, collection: Transmission.all %>
        </div>
        <div class="col-sm">
          <%= f.input :branch_id, as: :select, collection: Branch.all %>
        </div>
      </div>

    <div class="row form-inputs">
      <div class="col-sm">
        <%= f.input :financier_id, as: :select, collection: Financier.all %>
      </div>
      <div class="col-sm">
        <%= f.input :prepaid, as: :integer, input_html: { min: 0 } %>
      </div>

    </div>
    <div class="row form-inputs">

      <div class="col-sm">
        <%= f.input :amount, input_html: { min: 0 } %>
      </div>

    </div>




  </div>
</div>



