<div class="container">
  <h3>Vehiculo en parte de Pago</h3>
  <div class="row form-inputs">

    <div class="col-sm">
      <%= f.input :amount %>
    </div>

    <div class="col-sm">
    </div>

    <div class="col-sm align-self-end form-group">
    </div>
  </div>

  <div class="container">
    <h4>Detalles Vehiculo</h4>
      <div class="row form-inputs">
        <div class="col-sm">
          <%= f.input :brand_id, as: :select, collection: Brand.all %>
        </div>
        <div class="col-sm">
          <%= f.input :model %>
        </div>
        <div class="col-sm">
          <%= f.input :year %>
        </div>
      </div>

      <div class="row form-inputs">
        <div class="col-sm">
          <%= f.input :license_plate %>
        </div>
        <div class="col-sm">
          <%= f.input :color %>
        </div>
        <div class="col-sm">
          <%= f.input :milage %>
        </div>
      </div>

      <div class="row form-inputs">
        <div class="col-sm">
          <%= f.input :fuel_id, as: :select, collection: Fuel.all %>
        </div>
        <div class="col-sm">
          <%= f.input :transmission_id, as: :select, collection: Transmission.all %>
        </div>
        <div class="col-sm">
          <%= f.input :branch_id, as: :select, collection: Branch.all %>

        </div>
      </div>
  </div>
</div>



